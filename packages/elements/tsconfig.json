{
	"compilerOptions": {
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"lib": [
			"DOM",
			"ES2017"
		],
		"moduleResolution": "Node",
		"module": "ESNext",
		"target": "ES2017",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "src",
		"paths": {
			"@/utils/*": [
				"./utils/*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/*.stories.*"
	]
}